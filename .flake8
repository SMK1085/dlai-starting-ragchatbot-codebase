[flake8]
# Make flake8 compatible with black
max-line-length = 100
extend-ignore = E203, E266, E501, W503, E402
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    *.egg-info,
    .eggs,
    build,
    dist,
    chroma_db
max-complexity = 25
per-file-ignores =
    __init__.py:F401
    backend/tests/*.py:F401
